<%= form_for text do |f| %>

  <% if text.image? %>
  <div>
    <%= image_tag(text.image.full.url) %>
  </div><br/>
  <% end %>

  <div>
    <%= f.label :title %></br>
    <%= f.text_field :title, class: 'content', placeholder: 'Title' %>
  </div>

  <div>
    <p><%= f.label :image %></p>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div></br>

  <div>
    <%= f.label :description %></br>
    <%= f.text_area :description, class: 'content content-area', placeholder: 'Enter content here' %>
  </div></br>

  <% if current_user.premium? %>
  <div>
    <%= f.check_box :public %> <%= f.label :public, "Public" %>
  </div></br/>
  <% end %>

  <div><%= f.submit "Save", class: 'btn submit-btn' %></div>

<% end %>
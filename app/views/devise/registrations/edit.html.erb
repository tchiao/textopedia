<div class="row">
  <div class="col-md-8">
    <h1>Edit <%= resource_name.to_s.humanize %></h1>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-label">
          <%= f.label :name %><br/>
          <%= f.text_field :name, class: 'form-field' %>
        </div><br/>

        <div>
          <p class="form-label">Avatar</p>
          <%= image_tag(current_user.avatar.profile.url) %><br/><br/>
          <%= f.file_field :avatar %><br/>
          <%= f.hidden_field :avatar_cache %>
        </div>


        <div>
          <%= f.label :email, class: 'form-label' %><br />
          <%= f.email_field :email, class: 'form-field', autofocus: true %>
        </div><br />

        <div>
          <%= f.label :password, class: 'form-label' %><br />
          <%= f.password_field :password, class: 'form-field', placeholder: "Leave blank if unchanged", autocomplete: "off" %>
        </div><br />

        <div>
          <%= f.label :password_confirmation, class: 'form-label' %><br />
          <%= f.password_field :password_confirmation, class: 'form-field', autocomplete: "off" %>
        </div><br />

        <div>
          <%= f.label :current_password, class: 'form-label' %><br />
          <%= f.password_field :current_password, class: 'form-field', placeholder: "Enter to confirm changes",autocomplete: "off" %>
        </div><br />

        <div><%= f.submit "Update", class: 'button submit-button' %></div>
      <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel", registration_path(resource_name), class: 'button cancel-button', data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Back", texts_path %>
  </div>

  <div class="col-md-4">
    <br/><br/>
    <span class="form-label">Current Plan</span>: <%= current_user.plan.capitalize %>
    <% if !current_user.premium? %>
      </br></br>Get a Premium plan to save your texts as private and add collaborators.
      <br/><p><%= render partial: 'charges/form2' %></p>
    <% end %>
  </div>
</div>


<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, class: 'form-field', autofocus: true %></div>

  <div><%= f.label :password %><br />
    <%= f.password_field :password, class: 'form-field', autocomplete: "off" %></div>

  <% if devise_mapping.rememberable? -%>
    <p><div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div></p>
  <% end -%>

  <div><%= f.submit "Log in", class: 'btn submit-btn' %></div>
<% end %>
<br/>
<%= render "devise/shared/links" %>

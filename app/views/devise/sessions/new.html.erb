<div class="row">
  <div class="col-md-8">
    <h1>Log in</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div>
        <%= f.label :email, class: 'form-label' %><br />
        <%= f.email_field :email, class: 'form-field', autofocus: true %>
      </div><br/>

      <div>
        <%= f.label :password, class: 'form-label' %><br />
        <%= f.password_field :password, class: 'form-field', autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <p><div>
          <%= f.check_box :remember_me %> <%= f.label :remember_me, class: 'form-label' %>
        </div></p>
      <% end -%>

      <div>
        <%= f.submit "Log in", class: 'button submit-button' %>
      </div>
    <% end %>
    <br/>
    <%= render "devise/shared/links" %>
  </div>
</div>